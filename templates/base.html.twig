<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>

    <link rel="icon" href="{{ asset('favicon.ico') }}">

    {# --- CSS global --- #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/litepicker/dist/css/litepicker.css" rel="stylesheet">
    {# --- Font Awesome --- #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
    <link rel="stylesheet" href="{{ asset('css/sidebar.css') }}">
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">

    <style>
        /* Personnalisation Litepicker */
        .litepicker {
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.15);
            border: none;
        }
        .litepicker .container__months {
            display: flex;
            gap: 2rem;
            padding: 1.5rem;
        }
        .litepicker .month-item-header {
            font-weight: 600;
            color: #38000A;
        }
        .litepicker .day-item:hover {
            background-color: #FFA896;
            color: white;
        }
        .litepicker .is-start-date,
        .litepicker .is-end-date {
            background-color: #CD1C18;
            color: white !important;
        }
        .litepicker .is-in-range {
            background-color: #FFA89640;
        }
    </style>

    {# --- Bloc optionnel pour les CSS spécifiques à une page --- #}
    {% block stylesheets %}{% endblock %}
</head>

<body>
{# Navbar globale #}
{% include 'partials/_navbar.html.twig' %}

<main class="mt-4">
    {% block body %}{% endblock %}
</main>

{# --- JS global --- #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Messages flash centralisés
        {% for message in app.flashes('success') %}
        Swal.fire({ icon: 'success', title: 'Succès', text: '{{ message|escape('js') }}', timer: 3000, showConfirmButton: false, toast: true, position: 'top-end' });
        {% endfor %}

        {% for message in app.flashes('danger') %}
        Swal.fire({ icon: 'error', title: 'Erreur', text: '{{ message|escape('js') }}', confirmButtonColor: '#dc3545' });
        {% endfor %}

        {% for message in app.flashes('warning') %}
        Swal.fire({ icon: 'warning', title: 'Attention', text: '{{ message|escape('js') }}', confirmButtonColor: '#ffc107' });
        {% endfor %}

        {% for message in app.flashes('info') %}
        Swal.fire({ icon: 'info', title: 'Info', text: '{{ message|escape('js') }}', timer: 3000, showConfirmButton: false, toast: true, position: 'top-end' });
        {% endfor %}
    });
</script>

{# --- Bloc pour JS spécifiques à une page --- #}
{% block javascripts %}
{% endblock %}
</body>
</html>
