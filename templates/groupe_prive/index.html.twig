{% extends './base.html.twig' %}

{% block title %}Tous mes groupes | BougeTonCrew{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/sortie.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Styles spécifiques pour la vue grille */
        :root {
            --orange: #FF6B00;
            --blue-dark: #0B2447;
            --background: #FCFBF9;
            --card-shadow: 0 1px 2px rgba(0,0,0,0.08), 0 4px 12px rgba(0,0,0,0.05);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--background);
            color: var(--blue-dark);
            padding: 20px;
        }

        .container {
            padding-top: 60px;
            max-width: 1400px;
            margin: 0 auto;
        }

        /* En-tête */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }

        .page-title {
            font-size: 26px;
            font-weight: 600;
            color: var(--blue-dark);
        }

        .btn-primary-large {
            padding: 12px 24px;
            background: var(--orange);
            color: var(--background);
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            border-radius: 8px;
            transition: all 0.3s;
            display: inline-block;
        }

        .btn-primary-large:hover {
            background: #e55f00;
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(255, 107, 0, 0.3);
        }

        /* Barre de recherche et filtres (styles originaux) */
        .search-section-page {
            padding: 20px 40px 10px;
            background: var(--background);
        }

        .container-page {
            max-width: 1400px;
            margin: 0 auto;
        }

        .search-box {
            background: var(--background);
            padding: 16px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
            border: 2px solid #e8e8e8;
        }

        .search-container {
            display: flex;
            gap: 8px;
            background: var(--background);
            padding: 8px;
            border-radius: 8px;
            margin-bottom: 12px;
        }

        .search-section {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .search-label {
            font-size: 11px;
            font-weight: 600;
            color: var(--blue-dark);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .search-input {
            padding: 8px 12px;
            border: 2px solid #e8e8e8;
            border-radius: 6px;
            font-size: 13px;
            transition: all 0.3s;
            background: var(--background);
            color: var(--blue-dark);
        }

        .search-input:focus {
            outline: none;
            border-color: var(--orange);
            box-shadow: 0 0 0 3px rgba(255, 107, 0, 0.1);
        }

        .search-btn {
            padding: 8px 20px;
            background: var(--orange);
            color: var(--background);
            border: none;
            border-radius: 6px;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s;
            align-self: flex-end;
        }

        .search-btn:hover {
            background: #e55f00;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 107, 0, 0.3);
        }

        .search-filters {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            padding: 0;
            max-width: 100%;
            margin: 0 auto;
        }

        .filter-checkbox {
            display: flex;
            align-items: center;
            gap: 6px;
            cursor: pointer;
            padding: 6px 12px;
            background: var(--background);
            border: 2px solid #e8e8e8;
            border-radius: 16px;
            transition: all 0.3s;
            font-size: 12px;
            color: var(--blue-dark);
            font-weight: 500;
        }

        .filter-checkbox:hover {
            border-color: var(--orange);
            background: rgba(255, 107, 0, 0.05);
        }

        .filter-checkbox input[type="checkbox"] {
            width: 16px;
            height: 16px;
            cursor: pointer;
            accent-color: var(--orange);
        }

        .sorties-count {
            margin-bottom: 16px;
            padding: 10px;
            background: var(--background);
            border-left: 4px solid var(--orange);
            border-radius: 6px;
        }

        .sorties-count p {
            margin: 0;
            color: var(--blue-dark);
            font-size: 14px;
        }

        .sorties-count strong {
            color: var(--orange);
            font-size: 16px;
        }

        .sorties-section {
            padding: 20px 40px 40px;
        }

        /* Grille de sorties */
        .sorties-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 24px;
            margin-bottom: 40px;
        }

        @media (min-width: 769px) and (max-width: 1024px) {
            .sorties-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (min-width: 1025px) and (max-width: 1400px) {
            .sorties-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        @media (min-width: 1401px) {
            .sorties-grid {
                grid-template-columns: repeat(4, 1fr);
            }
        }

        @media (max-width: 768px) {
            .sorties-grid {
                grid-template-columns: 1fr;
            }
        }

        .sortie-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.2s;
            cursor: pointer;
            box-shadow: var(--card-shadow);
        }

        .sortie-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.12);
        }

        .sortie-image {
            width: 100%;
            height: 240px;
            background-image: url('https://images.unsplash.com/photo-1511795409834-ef04bbd61622?w=800&q=80');
            background-size: cover;
            background-position: center;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .sortie-image::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(255, 107, 0, 0.7), rgba(255, 133, 51, 0.7));
        }

        .sortie-image i {
            position: relative;
            z-index: 1;
            color: white;
            font-size: 48px;
        }

        .status-badge-top {
            position: absolute;
            top: 12px;
            right: 12px;
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 600;
            background: white;
            color: var(--blue-dark);
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }

        .status-badge-top.status-now {
            background: var(--orange);
            color: white;
        }

        .status-badge-top.status-today {
            background: #28a745;
            color: white;
        }

        .status-badge-top.status-open {
            background: #d4edda;
            color: #155724;
        }

        .status-badge-top.status-closed {
            background: #f8d7da;
            color: #721c24;
        }

        .status-badge-top.status-full {
            background: #fff3cd;
            color: #856404;
        }

        .sortie-content {
            padding: 16px;
        }

        .sortie-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 8px;
        }

        .sortie-title {
            font-size: 16px;
            font-weight: 600;
            color: var(--blue-dark);
            margin-bottom: 4px;
        }

        .sortie-location {
            font-size: 14px;
            color: #717171;
            margin-bottom: 8px;
        }

        .sortie-date {
            font-size: 14px;
            color: #717171;
            margin-bottom: 8px;
        }

        .sortie-info {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 13px;
            color: #717171;
            margin-bottom: 12px;
        }

        .sortie-info span {
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .sortie-participants {
            font-size: 14px;
            color: var(--blue-dark);
            font-weight: 500;
        }

        .sortie-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 12px;
            border-top: 1px solid #f0f0f0;
        }

        .organizer {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 13px;
            color: #717171;
        }

        .organizer-avatar {
            width: 28px;
            height: 28px;
            border-radius: 50%;
            background: var(--orange);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 11px;
        }

        .status-badge {
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
        }

        .status-open {
            background: #d4edda;
            color: #155724;
        }

        .status-closed {
            background: #f8d7da;
            color: #721c24;
        }

        .status-full {
            background: #fff3cd;
            color: #856404;
        }

        /* Boutons d'action */
        .action-buttons {
            display: flex;
            gap: 8px;
            margin-top: 12px;
        }

        .btn-action {
            flex: 1;
            padding: 10px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
        }

        .btn-join {
            background: var(--orange);
            color: white;
        }

        .btn-join:hover {
            background: #e55f00;
        }

        .btn-manage {
            background: var(--blue-dark);
            color: white;
        }

        .btn-manage:hover {
            background: #081829;
        }

        .btn-subscribed {
            background: #28a745;
            color: white;
        }

        .btn-disabled {
            background: #e0e0e0;
            color: #999;
            cursor: not-allowed;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .sorties-grid {
                grid-template-columns: 1fr;
            }

            .page-header {
                flex-direction: column;
                gap: 16px;
                align-items: stretch;
            }
        }

        @media (min-width: 769px) and (max-width: 1024px) {
            .sorties-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (min-width: 1440px) {
            .sorties-grid {
                grid-template-columns: repeat(4, 1fr);
            }
        }

        /* Message vide */
        .no-sorties {
            text-align: center;
            padding: 60px 20px;
            color: #717171;
        }

        .no-sorties i {
            font-size: 64px;
            color: #ddd;
            margin-bottom: 16px;
        }

        .no-sorties h3 {
            font-size: 20px;
            margin-bottom: 8px;
            color: var(--blue-dark);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <!-- En-tête -->
        <div class="page-header">
            <h1 class="page-title">Tous mes groupes</h1>

            {% if app.user %}
                <a href="{{ path('nouveau_groupe') }}" class="btn-create">
                    <i class="fas fa-plus"></i>
                    Créer un groupe
                </a>
            {% endif %}
        </div>
        {% if groupes is empty %}
            <p>Vous n'avez pas encore créé de groupe privé.</p>
        {% else %}
            <ul class="list-group">
                {% for groupe in groupes %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <strong>{{ groupe.nomGroupe }}</strong>
                        <span>
                        {{ groupe.membres|length }} membre{{ groupe.membres|length > 1 ? 's' : '' }}
                        <a href="{{ path('modifier_groupe', {id: groupe.id}) }}" class="btn btn-sm btn-outline-primary ms-2">Modifier</a>
                        <form method="post" action="{{ path('supprimer_groupe', {id: groupe.id}) }}" style="display:inline-block;" onsubmit="return confirm('Supprimer ce groupe ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_groupe_prive_' ~ groupe.id) }}">
                            <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                        </form>
                    </span>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}



    {% include './partials/_footer.html.twig' %}
{% endblock %}

