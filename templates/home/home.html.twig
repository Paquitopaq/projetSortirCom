<body class="bg-light">
<!-- Navbar -->
<nav class="navbar navbar-expand-lg bg-white shadow-sm fixed-top">
    <div class="container">
        <a class="navbar-brand fw-bold text-danger" href="{{ path('app_home') }}">
{#            <img src="{{ asset('images/logo.svg') }}" alt="logo" width="30" class="me-2">#}
