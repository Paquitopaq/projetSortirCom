{% extends 'base.html.twig' %}

{% block title %}Accueil | BougeTonCrew{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}

{% block body %}

    <!-- Hero Section -->
    <section class="hero-minimal" id="hero-section">
        <div class="hero-minimal-content">
            <div class="hero-badge">
                <i class="fas fa-fire"></i> {{ sortiesDisponibles }} sorties disponibles
            </div>
            <h1 class="hero-title">Bouge ton Crew !</h1>
            <p class="hero-subtitle">Découvrez les meilleures sorties et événements près de chez vous</p>

            <!-- Barre de recherche simplifiée -->
            <form action="{{ path('app_sortie') }}" method="get" class="hero-search-form">
                <div class="search-box-modern">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text"
                           name="nom_sortie"
                           placeholder="Rechercher une sortie, un lieu, une activité..."
                           class="search-input-modern">
                    <button type="submit" class="search-btn-modern">
                        Rechercher
                    </button>
                </div>
            </form>

            <!-- Filtres rapides -->
            <div class="quick-filters">
                <a href="{{ path('app_sortie', {inscrit: 1}) }}" class="filter-chip">
                    <i class="fas fa-user-check"></i> Mes inscriptions
                </a>
                <a href="{{ path('app_sortie', {organisateur: 1}) }}" class="filter-chip">
                    <i class="fas fa-crown"></i> Mes sorties
                </a>
                <a href="{{ path('app_sortie') }}" class="filter-chip">
                    <i class="fas fa-compass"></i> Découvrir
                </a>
            </div>
        </div>

        <!-- Scroll indicator -->
        <div class="scroll-indicator">
            <i class="fas fa-chevron-down"></i>
        </div>
    </section>

    <!-- Sorties à la une -->
    <section class="featured-section">
        <div class="section-container">
            <div class="section-header-modern">
                <div>
                    <span class="section-subtitle">Événements populaires</span>
                    <h2 class="section-title-modern">À ne pas manquer</h2>
                </div>
                <a href="{{ path('app_sortie') }}" class="link-arrow">
                    Voir tout <i class="fas fa-arrow-right"></i>
                </a>
            </div>

            {% if sorties|length > 0 %}
                <div class="sorties-modern-grid">
                    {% for sortie in sorties|slice(0, 6) %}
                        <article class="sortie-modern-card" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
                            <a href="{{ path('sortie_detail', {'id': sortie.id}) }}" class="card-link-overlay"></a>

                            <div class="card-image-wrapper">
                                {% if sortie.photoSortie %}
                                    <img src="{{ asset('uploads/sorties/' ~ sortie.photoSortie) }}"
                                         alt="{{ sortie.nom }}"
                                         class="card-image">
                                {% else %}
                                    <div class="card-image-placeholder">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                {% endif %}

                                <!-- Badge état -->
                                {% if sortie.etat.value == 'Ouverte' %}
                                    <span class="card-badge badge-open">
                                        <i class="fas fa-check-circle"></i> Ouvert
                                    </span>
                                {% elseif sortie.participants|length >= sortie.nbInscriptionMax %}
                                    <span class="card-badge badge-full">
                                        <i class="fas fa-users"></i> Complet
                                    </span>
                                {% endif %}
                            </div>

                            <div class="card-content-modern">
                                <div class="card-meta">
                                    <span class="card-date">
                                        <i class="fas fa-calendar"></i>
                                        {{ sortie.dateHeureDebut|date('d M') }}
                                    </span>
                                    <span class="card-participants">
                                        <i class="fas fa-users"></i>
                                        {{ sortie.participants|length }}/{{ sortie.nbInscriptionMax }}
                                    </span>
                                </div>

                                <h3 class="card-title-modern">{{ sortie.nom }}</h3>

                                <div class="card-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    {{ sortie.lieu.nom ?? 'Lieu à définir' }}
                                </div>

                                <div class="card-footer-modern">
                                    <div class="organizer-mini">
                                        <div class="organizer-mini-avatar">
                                            {% if sortie.organisateur and sortie.organisateur.getAvatarPath() %}
                                                <img src="{{ asset(sortie.organisateur.getAvatarPath()) }}" alt="Avatar">
                                            {% else %}
                                                <span>{{ sortie.organisateur.prenom|first|upper }}{{ sortie.organisateur.nom|first|upper }}</span>
                                            {% endif %}
                                        </div>
                                        <span class="organizer-mini-name">
                                            {{ sortie.organisateur.prenom }}
                                        </span>
                                    </div>

                                    <div class="card-action">
                                        <i class="fas fa-arrow-right"></i>
                                    </div>
                                </div>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            {% else %}
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-calendar-plus"></i>
                    </div>
                    <h3>Aucune sortie disponible</h3>
                    <p>Soyez le premier à créer une sortie pour votre communauté</p>
                    {% if app.user %}
                        <a href="{{ path('sortie_create') }}" class="btn-primary-modern">
                            <i class="fas fa-plus"></i> Créer une sortie
                        </a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </section>

    <!-- Stats Section Moderne -->
    <section class="stats-modern">
        <div class="section-container">
            <div class="stats-grid-modern">
                <div class="stat-card-modern" data-aos="zoom-in">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number" data-target="{{ sortiesDisponibles }}">0</div>
                        <div class="stat-label">Sorties actives</div>
                    </div>
                </div>

                <div class="stat-card-modern" data-aos="zoom-in" data-aos-delay="100">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number" data-target="{{ participantsActifs }}">0</div>
                        <div class="stat-label">Membres actifs</div>
                    </div>
                </div>

                <div class="stat-card-modern" data-aos="zoom-in" data-aos-delay="200">
                    <div class="stat-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number" data-target="{{ organisateurs }}">0</div>
                        <div class="stat-label">Organisateurs</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-modern">
        <div class="section-container">
            <div class="cta-content-modern">
                <div class="cta-text">
                    <h2 class="cta-title-modern">Prêt à vivre de nouvelles expériences ?</h2>
                    <p class="cta-subtitle-modern">
                        Rejoignez notre communauté et découvrez des sorties qui vous ressemblent
                    </p>
                </div>
                <div class="cta-actions">
                    {% if app.user %}
                        <a href="{{ path('sortie_create') }}" class="btn-primary-modern btn-large">
                            <i class="fas fa-plus-circle"></i> Créer une sortie
                        </a>
                        <a href="{{ path('app_sortie') }}" class="btn-secondary-modern btn-large">
                            <i class="fas fa-compass"></i> Explorer
                        </a>
                    {% else %}
                        <a href="{{ path('app_register') }}" class="btn-primary-modern btn-large">
                            <i class="fas fa-user-plus"></i> S'inscrire
                        </a>
                        <a href="{{ path('app_login') }}" class="btn-secondary-modern btn-large">
                            <i class="fas fa-sign-in-alt"></i> Se connecter
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    {% include 'partials/_footer.html.twig' %}
{% endblock %}

{% block javascripts %}
    <!-- AOS (Animate On Scroll) -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <script>
        // Images de fond aléatoires pour le hero
        const heroImages = [
            '{{ asset("assets/images/niort-fond.jpg") }}',
            '{{ asset("assets/images/nantes.jpg") }}',
            '{{ asset("assets/images/quimper.webp") }}',
            '{{ asset("assets/images/rennes.jpg") }}',
        ];

        // Sélection aléatoire d'une image
        const randomImage = heroImages[Math.floor(Math.random() * heroImages.length)];
        const heroSection = document.getElementById('hero-section');
        heroSection.style.backgroundImage = `url('${randomImage}')`;
    </script>

    <script>
        // Initialiser AOS
        AOS.init({
            duration: 800,
            once: true,
            offset: 100
        });

        // Animation des compteurs
        document.addEventListener('DOMContentLoaded', function() {
            const counters = document.querySelectorAll('.stat-number');

            const animateCounter = (counter) => {
                const target = parseInt(counter.getAttribute('data-target'));
                const duration = 2000;
                const step = target / (duration / 16);
                let current = 0;

                const updateCounter = () => {
                    current += step;
                    if (current < target) {
                        counter.textContent = Math.floor(current);
                        requestAnimationFrame(updateCounter);
                    } else {
                        counter.textContent = target;
                    }
                };

                updateCounter();
            };

            // Observer pour déclencher l'animation quand visible
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateCounter(entry.target);
                        observer.unobserve(entry.target);
                    }
                });
            });

            counters.forEach(counter => observer.observe(counter));

            // Scroll indicator
            const scrollIndicator = document.querySelector('.scroll-indicator');
            if (scrollIndicator) {
                scrollIndicator.addEventListener('click', () => {
                    document.querySelector('.featured-section').scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            }
        });
    </script>
{% endblock %}