{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
    <div class="admin-page container mt-4">
        <h1 class="mb-4">Gestion des utilisateurs</h1>

        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
            <tr>
                <th>Avatar</th>
                <th>Email</th>
                <th>Pseudo</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Administrateur</th>
                <th>Actif</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for participant in participants %}
                <tr>
                    <td>
                        {% if participant.photoProfil %}
                            <img src="{{ asset('assets/images/' ~ participant.photoProfil) }}" alt="Avatar" class="rounded-circle" width="40" height="40">
                        {% else %}
                            <div class="avatar-placeholder rounded-circle d-flex align-items-center justify-content-center">
                                {{ participant.email|slice(0,1)|upper }}
                            </div>
                        {% endif %}
                    </td>
                    <td>{{ participant.email }}</td>
                    <td>{{ participant.pseudo }}</td>
                    <td>{{ participant.nom }}</td>
                    <td>{{ participant.prenom }}</td>
                    <td>
                        {% if participant.administrateur %}
                            <span class="badge bg-warning text-dark">Oui</span>
                        {% else %}
                            <span class="badge bg-secondary">Non</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if participant.actif %}
                            <span class="badge bg-success">Actif</span>
                        {% else %}
                            <span class="badge bg-danger">Inactif</span>
                        {% endif %}
                    </td>
                    <td>
                        <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#modal-{{ participant.id }}">
                            Modifier
                        </button>
                    </td>
                </tr>

                {# Modal Bootstrap 5 #}
                <div class="modal fade" id="modal-{{ participant.id }}" tabindex="-1" aria-labelledby="modalLabel{{ participant.id }}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalLabel{{ participant.id }}">Modifier {{ participant.email }}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                            </div>
                            <div class="modal-body">
                                {{ form_start(forms[participant.id]) }}
                                {{ form_widget(forms[participant.id]) }}
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                    <button type="submit" class="btn btn-primary">Valider</button>
                                </div>
                                {{ form_end(forms[participant.id]) }}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center">Aucun utilisateur trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <style> /* --- Table et badges --- */ .admin-page { padding: 2rem; } .admin-table { width: 100%; border-collapse: collapse; } .admin-table th, .admin-table td { padding: 0.75rem 1rem; border: 1px solid #e0e0e0; text-align: left; } .avatar, .avatar-placeholder { width: 40px; height: 40px; border-radius: 50%; object-fit: cover; display: flex; align-items: center; justify-content: center; background: #ccc; color: #fff; font-weight: 600; } .badge { padding: 0.25rem 0.5rem; border-radius: 12px; font-size: 0.75rem; font-weight: 600; } .badge.admin { background: #ffc107; color: #222; } .badge.user { background: #e0e0e0; color: #222; } .badge.active { background: #28a745; color: #fff; } .badge.inactive { background: #dc3545; color: #fff; } .actions .btn { padding: 0.25rem 0.5rem; margin-right: 0.25rem; font-size: 0.75rem; border-radius: 4px; text-decoration: none; color: #fff; cursor: pointer; } .btn-edit { background: #17a2b8; } /* --- Modal --- */ .modal { display: none; position: fixed; z-index: 2000; left: 0; top: 0; width: 100%; height: 100%; overflow: auto; background-color: rgba(0,0,0,0.5); } .modal-content { background-color: #fff; margin: 10% auto; padding: 2rem; border-radius: 8px; width: 400px; position: relative; } .modal .close { position: absolute; top: 10px; right: 15px; font-size: 24px; cursor: pointer; } .form-group { margin-bottom: 1rem; display: flex; flex-direction: column; } .form-group label { font-weight: 600; margin-bottom: 0.25rem; } .form-group input, .form-group select { padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px; } </style>
{% endblock %}
