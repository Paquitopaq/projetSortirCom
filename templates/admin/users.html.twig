{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
    <div class="admin-page">
        <div class="page-header">
            <h1 class="page-title">Gestion des utilisateurs</h1>
            <div class="header-actions">
                <form class="search-bar" onsubmit="return false;">
                    <i class="fas fa-search"></i>
                    <input id="searchInput" type="text" placeholder="Rechercher un utilisateur..." name="search" />
                    <button type="button"><i class="fas fa-arrow-right"></i></button>
                </form>
                <a href="{{ path('admin_create_profil') }}" class="btn-create-user">
                    <i class="fas fa-plus"></i> Ajouter un utilisateur
                </a>
            </div>
        </div>

        {% if participants is empty %}
            <div class="no-sorties">
                <i class="fas fa-user-slash"></i>
                <h3>Aucun utilisateur trouvé</h3>
                <p>Essayez d’ajouter un nouveau participant.</p>
            </div>
        {% else %}
            <div class="users-list">
                {% for participant in participants %}
                    <div class="user-card" data-pseudo="{{ participant.pseudo|lower }}" data-email="{{ participant.email|lower }}">
                        <div class="user-card-content">
                            <div class="user-avatar">
                                {% if participant.photoProfil %}
                                    <img src="{{ asset(participant.getAvatarPath()) }}" alt="{{ participant.pseudo }}">
                                {% else %}
                                    <img src="{{ asset('assets/avatars/cchat.png') }}" alt="Avatar par défaut">
                                {% endif %}
                            </div>

                            <div class="user-info">
                                <div class="user-name">
                                    <i class="fas fa-user"></i>
                                    <span>{{ participant.pseudo }}</span>
                                    {% if 'ROLE_ADMIN' in participant.roles %}
                                        <span class="badge-admin"><i class="fas fa-star"></i> Admin</span>
                                    {% endif %}
                                </div>

                                <div class="user-details">
                                    <span><i class="fas fa-envelope"></i> {{ participant.email }}</span>
                                    <span><i class="fas fa-phone"></i> {{ participant.telephone ?? 'Non renseigné' }}</span>
                                    {% if participant.site is defined and participant.site is not null %}
                                        <span><i class="fas fa-city"></i> {{ participant.site.nom }}</span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="user-status">
                                {% if participant.actif %}
                                    <span class="status-badge status-open"><i class="fas fa-check-circle"></i> Actif</span>
                                {% else %}
                                    <span class="status-badge status-closed"><i class="fas fa-ban"></i> Désactivé</span>
                                {% endif %}
                            </div>

                            <div class="user-actions dropdown">
                                <button class="btn" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v"></i></button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form class="form-toggle-user" action="{{ path('admin_user_desactived', { id: participant.id }) }}" method="POST">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-power-off"></i>
                                                {{ participant.actif ? 'Désactiver' : 'Activer' }}
                                            </button>
                                        </form>
                                    </li>
                                    <li>
                                        <form action="{{ path('admin_user_toggle_admin', { id: participant.id }) }}" method="post">
                                            <button class="dropdown-item">
                                                <i class="fas fa-crown"></i>
                                                {% if 'ROLE_ADMIN' in participant.roles %}
                                                    Retirer le rôle admin
                                                {% else %}
                                                    Donner le rôle admin
                                                {% endif %}
                                            </button>
                                        </form>
                                    </li>
                                    <li>
                                        <form class="form-delete-user" action="{{ path('admin_user_delete', { id: participant.id }) }}" method="POST">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participant.id) }}">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-trash-alt"></i> Supprimer
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    {# Script pour preview image + recherche + confirmations #}
    <script>
        function previewImage(event, id) {
            const input = event.target;
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.getElementById('preview-' + id);
                    if (img) img.src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        // recherche front
        document.getElementById('searchInput')?.addEventListener('input', function (e) {
            const searchTerm = e.target.value.toLowerCase().trim();
            const userCards = document.querySelectorAll('.user-card');
            let visibleCount = 0;

            userCards.forEach(card => {
                const pseudo = card.dataset.pseudo || '';
                const email = card.dataset.email || '';

                if (pseudo.includes(searchTerm) || email.includes(searchTerm)) {
                    card.style.display = '';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });
        });

        // sweetalert confirmations (désactiver / supprimer)
        document.querySelectorAll('.form-toggle-user').forEach(form => {
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Changer le statut ?',
                    html: "Voulez-vous vraiment changer le statut de cet utilisateur ?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Oui',
                    cancelButtonText: 'Annuler'
                }).then((r) => { if (r.isConfirmed) form.submit(); });
            });
        });

        document.querySelectorAll('.form-delete-user').forEach(form => {
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Supprimer cet utilisateur ?',
                    html: "La suppression est définitive.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Supprimer',
                    cancelButtonText: 'Annuler'
                }).then((r) => { if (r.isConfirmed) form.submit(); });
            });
        });
    </script>
{% endblock %}
