{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="auth-container">
        <div class="auth-wrapper">

            <!-- Illustration -->
            <div class="auth-illustration">
                <img src="{{ asset('images/forgot-password.svg') }}" alt="Mot de passe oublié">
            </div>

            <!-- Formulaire -->
            <div class="auth-form-section">
                <div class="auth-form-content">
                    <h1 class="auth-title"><i class="fa-solid fa-lock"></i> Mot de passe oublié</h1>

                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="custom-alert">
                            <i class="fa-solid fa-triangle-exclamation"></i> {{ flash_error }}
                        </div>
                    {% endfor %}

                    <p style="color: var(--text-gray); margin-bottom: 1.5rem;">
                        Entrez votre adresse e-mail ci-dessous. Nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </p>

                    {{ form_start(requestForm, {'attr': {'class': 'auth-form'}}) }}
                    <div class="form-group">
                        <div class="input-wrapper">
                            <i class="fa-solid fa-envelope input-icon"></i>
                            {{ form_widget(requestForm.email, {'attr': {'class': 'form-input', 'placeholder': 'Adresse e-mail'}}) }}
                        </div>
                        {{ form_errors(requestForm.email) }}
                    </div>

                    <button type="submit" class="btn-submit">
                        <i class="fa-solid fa-paper-plane"></i> Envoyer le lien de réinitialisation
                    </button>
                    {{ form_end(requestForm) }}

                    <div class="register-link">
                        <p class="register-text">
                            <i class="fa-solid fa-arrow-left"></i>
                            <a href="{{ path('app_login') }}" class="register-link-btn">Retour à la connexion</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
{% endblock %}
