{% extends 'base.html.twig' %}

{% block title %}Profil de {{ participant.pseudo ?? participant.prenom ~ ' ' ~ participant.nom }} | BougeTonCrew{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/view-profil.css') }}">
{% endblock %}

{% block body %}
    <div class="profile-container">
        <div class="profile-card-wrapper">
            <!-- Carte de profil principale -->
            <div class="profile-business-card">
                <!-- Header avec logo et bouton retour -->
                <div class="card-header">
                    <div class="brand-logo">
                        <i class="fas fa-users"></i>
                        <span>BougeTonCrew</span>
                    </div>
                    <a href="{{ path('app_sortie') }}" class="btn-back-circle">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                </div>

                <div class="card-content">
                    <!-- Section gauche : Avatar et infos de contact -->
                    <div class="profile-left">
                        <div class="avatar-section">
                            {% if app.user %}
                                <img class="avatar-image" src="{{ asset(app.user.getAvatarPath()) }}" alt="Avatar">
                            {% else %}
                                {{ asset('assets/avatars/cchat.png') }}
                            {% endif %}
                        </div>

                        <div class="profile-info">
                            <h2>{{ participant.pseudo ?? 'Utilisateur' }}</h2>
                            <p class="text-muted">{{ participant.prenom }} {{ participant.nom }}</p>
                            <p><i class="fas fa-envelope"></i> {{ participant.email }}</p>
                            <p><i class="fas fa-phone"></i> {{ participant.telephone ?? 'Non renseigné' }}</p>
                        </div>

                        {% if is_granted ('ROLE_ADMIN') %}
                            <p class="profile-card-role">Administrateur</p>
                        {% else %}
                            <p>Membre</p>
                        {% endif %}
                        
                        <div class="contact-info">
                            <div class="contact-item">
                                <div class="contact-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <span>{{ participant.email }}</span>
                            </div>
                        </div>

                        <!-- Bouton modifier en dehors du contact-info -->
                        {% if app.user and app.user.id == participant.id %}
                            <button class="btn-download" onclick="window.location.href='{{ path('app_profil_update') }}'">
                                <i class="fas fa-edit"></i>
                                Modifier mon profil
                            </button>
                            <div class="submit-wrapper">
                                <a href="{{ path('nouveau_groupe') }}" class="btn-secondary">
                                    <i class="fas fa-plus-circle"></i> Créer un groupe privé
                                </a>
                            </div>
                        {% endif %}
                    </div>

                    <!-- Section droite : Informations principales -->
                    <div class="profile-right">
                        <!-- Sections des sorties -->
                        <div class="activities-section">
                            <!-- Sorties organisées -->
                            <div class="activity-card">
                                <div class="activity-header">
                                    <h2>
                                        <i class="fas fa-calendar-plus"></i>
                                        Sorties organisées
                                    </h2>
                                    <span class="activity-count">{{ participant.sortiesOrganisees|length }}</span>
                                </div>

                                {% if participant.sortiesOrganisees|length > 0 %}
                                    <div class="activities-list">
                                        {% for sortie in participant.sortiesOrganisees %}
                                            <a href="{{ path('sortie_detail', {id: sortie.id}) }}" class="activity-item">
                                                <div class="activity-icon">
                                                    <i class="fas fa-calendar-check"></i>
                                                </div>
                                                <div class="activity-info">
                                                    <h3>{{ sortie.nom }}</h3>
                                                    <div class="activity-meta">
                                                        <span><i class="fas fa-clock"></i> {{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</span>
                                                        <span><i class="fas fa-users"></i> {{ sortie.participants|length }}/{{ sortie.nbInscriptionMax }}</span>
                                                    </div>
                                                </div>
                                                <span class="activity-badge status-{{ sortie.etat.value|lower|replace({' ': '-'}) }}">
                                                    {{ sortie.etat.value }}
                                                </span>
                                            </a>
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <div class="empty-activities">
                                        <i class="fas fa-calendar-times"></i>
                                        <p>Aucune sortie organisée</p>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Participations -->
                            <div class="activity-card">
                                <div class="activity-header">
                                    <h2>
                                        <i class="fas fa-ticket-alt"></i>
                                        Participations
                                    </h2>
                                    <span class="activity-count">{{ participant.sorties|length }}</span>
                                </div>

                                {% if participant.sorties|length > 0 %}
                                    <div class="activities-list">
                                        {% for sortie in participant.sorties %}
                                            <a href="{{ path('sortie_detail', {id: sortie.id}) }}" class="activity-item">
                                                <div class="activity-icon">
                                                    <i class="fas fa-ticket-alt"></i>
                                                </div>
                                                <div class="activity-info">
                                                    <h3>{{ sortie.nom }}</h3>
                                                    <div class="activity-meta">
                                                        <span><i class="fas fa-clock"></i> {{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</span>
                                                        <span><i class="fas fa-user"></i> {{ participant.pseudo ?? participant.prenom }}</span>
                                                    </div>
                                                </div>
                                                <span class="activity-badge status-{{ sortie.etat.value|lower|replace({' ': '-'}) }}">
                                                    {{ sortie.etat.value }}
                                                </span>
                                            </a>
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <div class="empty-activities">
                                        <i class="fas fa-inbox"></i>
                                        <p>Aucune participation</p>
                                    </div>
                                {% endif %}
                            </div>
                            <!-- Groupes privés -->
                            <div class="activity-card">
                                <div class="activity-header">
                                    <h2>
                                        <i class="fas fa-users-cog"></i>
                                        Groupes privés
                                    </h2>
                                    <span class="activity-count">{{ groupes|length }}</span>
                                </div>

                                {% if groupes|length > 0 %}
                                    <div class="activities-list">
                                        {% for groupe in groupes %}
                                            <div class="activity-item">
                                                <div class="activity-icon">
                                                    <i class="fas fa-user-friends"></i>
                                                </div>
                                                <div class="activity-info">
                                                    <h3>{{ groupe.nomGroupe }}</h3>
                                                    <div class="activity-meta">
                                                        <span><i class="fas fa-users"></i> {{ groupe.membres|length }} membre{{ groupe.membres|length > 1 ? 's' : '' }}</span>
                                                        {% if groupe.sortie %}
                                                            <span><i class="fas fa-calendar"></i> Sortie liée :
                                    <a href="{{ path('sortie_detail', {id: groupe.sortie.id}) }}">{{ groupe.sortie.nom }}</a>
                                </span>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                {% if app.user and app.user.id == participant.id %}
                                                    <a href="{{ path('modifier_groupe', {id: groupe.id}) }}" class="activity-badge status-edit">
                                                        Modifier
                                                    </a>
                                                    <form method="post" action="{{ path('supprimer_groupe', {id: groupe.id}) }}" onsubmit="return confirm('Supprimer ce groupe ?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_groupe_prive_' ~ groupe.id) }}">
                                                        <button class="btn btn-sm btn-outline-danger">
                                                            <i class="fas fa-trash-alt"></i> Supprimer
                                                        </button>
                                                    </form>

                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <div class="empty-activities">
                                        <i class="fas fa-user-slash"></i>
                                        <p>Aucun groupe privé créé</p>
                                    </div>
                                {% endif %}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'partials/_footer.html.twig' %}
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Messages flash avec SweetAlert2
        {% for label, messages in app.flashes %}
        {% for message in messages %}
        Swal.fire({
            icon: '{{ label == 'success' ? 'success' : (label == 'danger' or label == 'error' ? 'error' : 'info') }}',
            title: '{{ label == 'success' ? 'Succès' : (label == 'danger' or label == 'error' ? 'Erreur' : 'Information') }}',
            text: '{{ message|raw }}',
            confirmButtonColor: '#FF6B00',
            timer: 3000,
            timerProgressBar: true
        });
        {% endfor %}
        {% endfor %}
    </script>
{% endblock %}