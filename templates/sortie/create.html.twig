{% extends 'base.html.twig' %}

{% block title %}{{ sortie is defined and sortie.id ? 'Modifier' : 'Créer' }} une Sortie | BougeTonCrew{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/sortie.css') }}">
    <link rel="stylesheet" href="{{ asset('css/sortie-create.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
{% endblock %}

{% block body %}
    <section class="create-section">
        <div class="create-header">
            <h1 class="create-title">
                <i class="fas fa-{{ sortie is defined and sortie.id ? 'edit' : 'plus-circle' }}"></i>
                {{ sortie is defined and sortie.id ? 'Modifier' : 'Créer' }} une Sortie
            </h1>
            <p class="create-subtitle">
                {{ sortie is defined and sortie.id ? 'Modifiez les informations de votre sortie' : 'Organisez votre prochaine sortie et invitez votre crew !' }}
            </p>
        </div>

        <div class="form-card">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            {# ---------------- Informations générales ---------------- #}
            <div class="form-section">
                <div class="form-section-title">
                    <i class="fas fa-info-circle"></i> Informations générales
                </div>

                <div class="form-group">
                    {{ form_label(form.nom, 'Nom de la sortie', {'label_attr': {'class': 'form-label required'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Randonnée en forêt'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.infoSortie, 'Description', {'label_attr': {'class': 'form-label required'}}) }}
                    {{ form_widget(form.infoSortie, {'attr': {'class': 'form-control', 'placeholder': 'Décrivez votre sortie...'}}) }}
                    <div class="form-help">Donnez un maximum d'informations pour donner envie de participer !</div>
                    {{ form_errors(form.infoSortie) }}
                </div>

                {# Upload photo sortie #}
                <div class="form-group">
                    {{ form_label(form.photoSortie, 'Photo de la sortie', {'label_attr': {'class': 'form-label'}}) }}
                    <label class="custom-file-upload">
                        {{ form_widget(form.photoSortie, {'attr': {'class': 'form-control-file'}}) }}
                        <span>Choisir un fichier...</span>
                    </label>
                    {% if sortie is defined and sortie.photoSortie %}
                        <div class="mt-2">
                            <img src="{{ asset('uploads/sorties/' ~ sortie.photoSortie) }}" alt="Photo sortie" class="img-thumbnail">
                        </div>
                    {% endif %}
                    {{ form_errors(form.photoSortie) }}
                </div>
            </div>

            {# ---------------- Date et durée ---------------- #}
            <div class="form-section">
                <div class="form-section-title">
                    <i class="fas fa-calendar-alt"></i> Date et durée
                </div>

                <div class="form-row">
                    <div class="form-group">
                        {{ form_label(form.dateHeureDebut, 'Date et heure de début', {'label_attr': {'class': 'form-label required'}}) }}
                        {{ form_widget(form.dateHeureDebut, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.dateHeureDebut) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.dateLimiteInscription, 'Date limite d\'inscription', {'label_attr': {'class': 'form-label required'}}) }}
                        {{ form_widget(form.dateLimiteInscription, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-help">Les participants ne pourront plus s'inscrire après cette date</div>
                        {{ form_errors(form.dateLimiteInscription) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.duree, 'Durée (en minutes)', {'label_attr': {'class': 'form-label required'}}) }}
                        {{ form_widget(form.duree, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 120'}}) }}
                        {{ form_errors(form.duree) }}
                    </div>
                </div>
            </div>

            {# ---------------- Lieu ---------------- #}
            <div class="form-section">
                <div class="form-section-title">
                    <i class="fas fa-map-marker-alt"></i> Lieu de rendez-vous
                </div>

                <div class="form-group">
                    {{ form_label(form.site, 'Site organisateur', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.site, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.site) }}
                </div>

                <div class="mb-3">
                    <label for="sortie_lieu">Lieu existant :</label>
                    {{ form_widget(form.lieu) }}

                    <button type="button" id="btn-nouveau-lieu" class="btn btn-outline-success btn-sm ms-2">
                        <i class="fa fa-plus"></i> Ajouter un nouveau lieu
                    </button>
                </div>

                <div id="nouveau-lieu-form" style="display:none; margin-top: 1rem;">
                    <h5>Créer un nouveau lieu</h5>
                    {{ form_widget(form.nouveauLieu, {'attr': {'class': 'form-control'}}) }}

                    <div class="mt-2">
                        <a href="{{ path('ville_ajouter', { redirect: app.request.uri }) }}"
                           class="btn btn-outline-primary btn-sm">
                            <i class="fa fa-city"></i> Ajouter une nouvelle ville
                        </a>
                    </div>
                </div>

                <div id="lieu-details" class="lieu-details" style="display:none;">
                    <div class="lieu-info"><strong>Ville :</strong> <span id="lieu-ville"></span></div>
                    <div class="lieu-info"><strong>Rue :</strong> <span id="lieu-rue"></span></div>
                    <div class="lieu-info"><strong>Code postal :</strong> <span id="lieu-code-postal"></span></div>
                    <div class="lieu-info"><strong>Latitude :</strong> <span id="lieu-latitude"></span></div>
                    <div class="lieu-info"><strong>Longitude :</strong> <span id="lieu-longitude"></span></div>
                </div>
            </div>

            {# ---------------- Participants ---------------- #}
            <div class="form-section">
                <div class="form-section-title">
                    <i class="fas fa-users"></i> Participants
                </div>

                <div class="form-group">
                    {{ form_label(form.nbInscriptionMax, 'Nombre maximum de participants', {'label_attr': {'class': 'form-label required'}}) }}
                    {{ form_widget(form.nbInscriptionMax, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 10'}}) }}
                    <div class="form-help">
                        Vous compris
                        {% if sortie is defined and sortie.id %}
                            - <strong>Actuellement {{ sortie.participants|length }} inscrits</strong>
                        {% endif %}
                    </div>
                    {{ form_errors(form.nbInscriptionMax) }}
                </div>
            </div>

            {# ---------------- Boutons d'action ---------------- #}
            <!-- Section Groupe -->
            <div class="form-section">
                <div class="form-section-title">
                    <i class="fas fa-user-friends"></i>
                    Groupe associé
                </div>

                <div class="mb-3">
                    <label for="sortie_groupe">Groupe existant :</label>
                    {{ form_widget(form.groupePrive) }}

                    <div id="groupe-details" class="groupe-details" style="display:none; margin-top: 1rem;">
                        <div class="groupe-info">
                            <strong>Nom :</strong> <span id="groupe-nom"></span>
                        </div>
                        <div class="groupe-info">
                            <strong>Description :</strong> <span id="groupe-description"></span>
                        </div>
                        <div class="groupe-info">
                            <strong>Nombre de membres :</strong> <span id="groupe-membres"></span>
                        </div>
                    </div>
                </div>

            </div>



            <!-- Boutons d'action -->
            {# ---------------- Boutons d'action ---------------- #}
            <div class="form-actions">
                <a href="{{ sortie is defined and sortie.id ? path('sortie_detail', {'id': sortie.id}) : path('app_sortie') }}" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Annuler
                </a>

                {% if sortie is defined and sortie.id %}
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Enregistrer les modifications
                    </button>
                {% else %}
                    <button type="submit" name="action" value="enregistrer" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer en brouillon
                    </button>
                    <button type="submit" name="action" value="publier" class="btn btn-success">
                        <i class="fas fa-paper-plane"></i> Publier maintenant
                    </button>
                {% endif %}
            </div>

            {{ form_end(form) }}

            {% if sortie is defined and sortie.id %}
                <div class="info-card mt-4">
                    <i class="fas fa-info-circle"></i>
                    <div>
                        <strong>Note :</strong> Les participants déjà inscrits ({{ sortie.participants|length }}) seront conservés après la modification. Assurez-vous que le nombre maximum de participants est suffisant.
                    </div>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Flatpickr
            flatpickr('input[name="sortie[dateHeureDebut]"]', {
                enableTime: true, dateFormat: "Y-m-d H:i", time_24hr: true, locale: "fr", minDate: "today"
            });
            flatpickr('input[name="sortie[dateLimiteInscription]"]', {
                enableTime: true, dateFormat: "Y-m-d H:i", time_24hr: true, locale: "fr", minDate: "today"
            });

            // SweetAlert2 pour messages flash
            {% for label, messages in app.flashes %}
            {% for message in messages %}
            Swal.fire({
                icon: '{{ label == 'success' ? 'success' : (label == 'danger' or label == 'error' ? 'error' : 'info') }}',
                title: '{{ label == 'success' ? 'Succès' : (label == 'danger' or label == 'error' ? 'Erreur' : 'Information') }}',
                text: '{{ message|raw }}',
                confirmButtonColor: '#FF6B00',
                timer: 3000,
                timerProgressBar: true
            });
            {% endfor %}
            {% endfor %}

            // Upload file preview
            const fileInput = document.querySelector('.form-control-file');
            const fileLabel = document.querySelector('.custom-file-upload span');
            if(fileInput) {
                fileInput.addEventListener('change', function() {
                    fileLabel.textContent = this.files[0] ? this.files[0].name : 'Choisir un fichier...';
                });
            }

            // Toggle nouveau lieu
            const btn = document.getElementById('btn-nouveau-lieu');
            const formNouveauLieu = document.getElementById('nouveau-lieu-form');
            const lieuSelect = document.getElementById('sortie_lieu');
            let visible = false;
            if(btn) {
                btn.addEventListener('click', function () {
                    visible = !visible;
                    formNouveauLieu.style.display = visible ? 'block' : 'none';
                    lieuSelect.disabled = visible;
                    btn.innerHTML = visible ? '<i class="fa fa-minus"></i> Annuler le nouveau lieu' : '<i class="fa fa-plus"></i> Ajouter un nouveau lieu';
                    btn.classList.toggle('btn-outline-success', !visible);
                    btn.classList.toggle('btn-outline-danger', visible);
                });
            }

            // Affichage détails du lieu
            const lieux = {
                {% for lieu in lieux %}
                "{{ lieu.id }}": {
                    ville: "{{ lieu.ville.nom|e('js') }}",
                    rue: "{{ lieu.rue|e('js') }}",
                    codePostal: "{{ lieu.ville.codePostal|e('js') }}",
                    latitude: "{{ lieu.latitude }}",
                    longitude: "{{ lieu.longitude }}"
                },
                {% endfor %}
            };
            if(lieuSelect){
                lieuSelect.addEventListener('change', function () {
                    const details = lieux[this.value];
                    const div = document.getElementById('lieu-details');
                    if(details){
                        document.getElementById('lieu-ville').textContent = details.ville;
                        document.getElementById('lieu-rue').textContent = details.rue;
                        document.getElementById('lieu-code-postal').textContent = details.codePostal;
                        document.getElementById('lieu-latitude').textContent = details.latitude;
                        document.getElementById('lieu-longitude').textContent = details.longitude;
                        div.style.display = 'block';
                    } else { div.style.display = 'none'; }
                });
                {% if sortie is defined and sortie.id %}
                lieuSelect.dispatchEvent(new Event('change'));
                {% endif %}
            }
        });
    </script>
    <script>
        // Données des groupes
        const groupes = {
            {% for groupe in groupes %}
            "{{ groupe.id }}": {
                nom: "{{ groupe.nomGroupe|e('js') }}",
                membres: "{{ groupe.membres|length }}"
            },
            {% endfor %}
        };

        // Affichage des détails du groupe
        const groupeSelect = document.getElementById('sortie_groupe');
        if (groupeSelect) {
            groupeSelect.addEventListener('change', function () {
                const selectedId = this.value;
                const details = groupes[selectedId];
                const detailsDiv = document.getElementById('groupe-details');

                if (details) {
                    document.getElementById('groupe-nom').textContent = details.nom;
                    document.getElementById('groupe-description').textContent = details.description;
                    document.getElementById('groupe-membres').textContent = details.membres;
                    detailsDiv.style.display = 'block';
                } else {
                    detailsDiv.style.display = 'none';
                }
            });

            // Affichage initial en mode modification
            {% if sortie is defined and sortie.id and sortie.groupe %}
            groupeSelect.dispatchEvent(new Event('change'));
            {% endif %}
        }
    </script>

{% endblock %}
