{% extends 'base.html.twig' %}

{% block title %}Toutes les sorties | BougeTonCrew{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/sortie.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}

{% block body %}
    <div class="container">
        <!-- En-tête -->
        <div class="page-header">
            <h1 class="page-title">Toutes les sorties</h1>
            {% if app.user %}
                <a href="{{ path('sortie_create') }}" class="btn-create">
                    <i class="fas fa-plus"></i>
                    Créer une sortie
                </a>
            {% endif %}
        </div>

        <!-- Barre de recherche -->
        <div class="search-bar">
            <form action="{{ path('app_sortie') }}" method="get">
                <input type="text"
                       name="nom_sortie"
                       placeholder="Rechercher une sortie..."
                       value="{{ app.request.query.get('nom_sortie') }}">

                <input type="text"
                       name="date_debut"
                       id="date-debut"
                       placeholder="Date de début"
                       value="{{ app.request.query.get('date_debut') }}"
                       readonly>

                <input type="text"
                       name="date_fin"
                       id="date-fin"
                       placeholder="Date de fin"
                       value="{{ app.request.query.get('date_fin') }}"
                       readonly>

                <button type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>

        <!-- Filtres -->
        <form action="{{ path('app_sortie') }}" method="get" id="filter-form">
            <input type="hidden" name="nom_sortie" value="{{ app.request.query.get('nom_sortie') }}">
            <input type="hidden" name="date_debut" value="{{ app.request.query.get('date_debut') }}">
            <input type="hidden" name="date_fin" value="{{ app.request.query.get('date_fin') }}">

            <div class="filters">
                {% if app.user %}
                    <label class="filter-btn {{ app.request.query.get('organisateur') ? 'active' : '' }}">
                        <input type="checkbox"
                               name="organisateur"
                               value="1"
                                {{ app.request.query.get('organisateur') ? 'checked' : '' }}
                               onchange="document.getElementById('filter-form').submit();"
                               style="display: none;">
                        <i class="fas fa-user-tie"></i> Mes sorties
                    </label>

                    <label class="filter-btn {{ app.request.query.get('inscrit') ? 'active' : '' }}">
                        <input type="checkbox"
                               name="inscrit"
                               value="1"
                                {{ app.request.query.get('inscrit') ? 'checked' : '' }}
                               onchange="document.getElementById('filter-form').submit();"
                               style="display: none;">
                        <i class="fas fa-check-circle"></i> Inscrit
                    </label>

                    <label class="filter-btn {{ app.request.query.get('non_inscrit') ? 'active' : '' }}">
                        <input type="checkbox"
                               name="non_inscrit"
                               value="1"
                                {{ app.request.query.get('non_inscrit') ? 'checked' : '' }}
                               onchange="document.getElementById('filter-form').submit();"
                               style="display: none;">
                        <i class="fas fa-times-circle"></i> Non inscrit
                    </label>
                {% endif %}

                <label class="filter-btn {{ app.request.query.get('passees') ? 'active' : '' }}">
                    <input type="checkbox"
                           name="passees"
                           value="1"
                            {{ app.request.query.get('passees') ? 'checked' : '' }}
                           onchange="document.getElementById('filter-form').submit();"
                           style="display: none;">
                    <i class="fas fa-history"></i> Passées
                </label>
            </div>
        </form>

        {% if sorties is defined and sorties|length > 0 %}
            <!-- Compteur de résultats -->
            <div class="results-count">
                <strong>{{ sorties|length }}</strong> sortie(s) trouvée(s)
            </div>

            <!-- Grille de sorties -->
            <div class="sorties-grid">
                {% for sortie in sorties %}
                    {% set isInscrit = app.user and sortie.participants.contains(app.user) %}
                    {% set isOrganisateur = app.user and sortie.organisateur == app.user %}
                    {% set isComplet = sortie.nbInscrits >= sortie.nbInscriptionMax %}

                    <div class="sortie-card">
                        <a href="{{ path('sortie_detail', {'id': sortie.id}) }}" style="text-decoration: none; color: inherit; display: contents;">
                            <div class="sortie-image">
                                {# Badge de statut #}
                                {% if sortie.etat == constant('App\\Enum\\Etat::OPEN') %}
                                    <span class="status-badge-top status-now">Ouverte</span>
                                {% elseif sortie.etat == constant('App\\Enum\\Etat::PASSED') %}
                                    <span class="status-badge-top status-passed">Passée</span>
                                {% elseif sortie.etat == constant('App\\Enum\\Etat::IN_PROGRESS') %}
                                    <span class="status-badge-top status-today">En cours</span>
                                {% elseif sortie.etat == constant('App\\Enum\\Etat::CREATED') %}
                                    <span class="status-badge-top status-open">Créée</span>
                                {% elseif isComplet %}
                                    <span class="status-badge-top status-full">Complet</span>
                                {% elseif sortie.etat == constant('App\\Enum\\Etat::CLOSED') %}
                                    <span class="status-badge-top status-closed">Clôturée</span>
                                {% endif %}

                                {# Affichage de la photo si disponible, sinon image par défaut #}
                                {% if sortie.photoSortie %}
                                    <img src="{{ asset('uploads/sorties/' ~ sortie.photoSortie) }}" alt="{{ sortie.nom }}" class="sortie-img">
                                {% else %}
                                    <img src="{{ asset('assets/images/default-sortie.jpg') }}" alt="Sortie sans image" class="sortie-img">
                                {% endif %}

                            </div>
                        </a>

                        <div class="sortie-content">
                            <h3 class="sortie-title">{{ sortie.nom }}</h3>

                            <p class="sortie-location">
                                <i class="fas fa-map-marker-alt"></i>
                                {{ sortie.lieu.nom ?? 'Lieu à définir' }}
                            </p>

                            <p class="sortie-date">
                                <i class="fas fa-calendar"></i>
                                {{ sortie.dateHeureDebut|date('d M Y') }} · {{ sortie.dateHeureDebut|date('H:i') }}
                            </p>

                            <div class="sortie-info">
                                <span><i class="fas fa-clock"></i> {{ sortie.duree }} min</span>
                            </div>

                            <p class="sortie-participants">
                                <i class="fas fa-users"></i> {{ sortie.nbInscrits }}/{{ sortie.nbInscriptionMax }} participants
                            </p>

                            <div class="sortie-footer">
                                <div class="organizer">
                                    <div class="organizer-avatar">
                                        {% if sortie.organisateur %}
                                            {{ sortie.organisateur.prenom|first|upper }}{{ sortie.organisateur.nom|first|upper }}
                                        {% else %}
                                            ?
                                        {% endif %}
                                    </div>
                                    <span>
                                        {% if isOrganisateur %}
                                            Vous
                                        {% elseif sortie.organisateur %}
                                            {{ sortie.organisateur.prenom }} {{ sortie.organisateur.nom|first }}.
                                        {% else %}
                                            Inconnu
                                        {% endif %}
                                    </span>
                                </div>
                            </div>

                            <div class="action-buttons">
                                {% if app.user %}
                                    {% if isOrganisateur %}
                                        <a href="{{ path('sortie_detail', {'id': sortie.id}) }}" class="btn-action btn-manage">
                                            <i class="fas fa-cog"></i> Gérer
                                        </a>
                                    {% elseif isInscrit %}
                                        <form method="post" action="{{ path('sortie_inscrire', {'id': sortie.id}) }}">
                                            <button type="submit" class="btn-action btn-unsubscribe">
                                                <i class="fas fa-user-times"></i> Se désinscrire
                                            </button>
                                        </form>
                                    {% elseif sortie.etat != constant('App\\Enum\\Etat::OPEN') %}
                                        <button class="btn-action btn-disabled" disabled>
                                            <i class="fas fa-lock"></i> Fermée
                                        </button>
                                    {% elseif isComplet %}
                                        <button class="btn-action btn-disabled" disabled>
                                            <i class="fas fa-users"></i> Complet
                                        </button>
                                    {% else %}
                                        <form method="post" action="{{ path('sortie_inscrire', {'id': sortie.id}) }}">
                                            <button type="submit" class="btn-action btn-join">
                                                <i class="fas fa-user-plus"></i> S'inscrire
                                            </button>
                                        </form>
                                    {% endif %}
                                {% else %}
                                    <a href="{{ path('app_login') }}" class="btn-action btn-join">
                                        <i class="fas fa-sign-in-alt"></i> Connexion
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="no-sorties">
                <i class="fas fa-inbox"></i>
                <h3>Aucune sortie disponible</h3>
                <p>Soyez le premier à créer une sortie !</p>
                {% if app.user %}
                    <a href="{{ path('sortie_create') }}" class="btn-create">
                        <i class="fas fa-plus-circle"></i> Créer une sortie
                    </a>
                {% endif %}
            </div>
        {% endif %}
    </div>

    {% include 'partials/_footer.html.twig' %}
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Flatpickr pour dates
            flatpickr("#date-debut", {
                dateFormat: "Y-m-d",
                altInput: true,
                altFormat: "d/m/Y",
                locale: "fr"
            });

            flatpickr("#date-fin", {
                dateFormat: "Y-m-d",
                altInput: true,
                altFormat: "d/m/Y",
                locale: "fr"
            });
        });
    </script>
{% endblock %}