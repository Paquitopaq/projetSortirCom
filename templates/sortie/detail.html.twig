{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/sortie-details.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <!-- En-tête -->
        <div class="detail-header">
            <a href="{{ path('app_sortie') }}" class="btn-back">
                <i class="fas fa-arrow-left"></i> Retour aux sorties
            </a>
            {% if app.user and (app.user == sortie.organisateur or is_granted('ROLE_ADMIN')) %}
                <div class="menu-dots">
                    <button class="dots-button">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                    <div class="dropdown-menu" id="dropdownMenu">
                        <a href="{{ path('sortie_edit', {'id': sortie.id}) }}">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        {% if sortie.etat != constant('App\\Enum\\Etat::CANCELLED') %}
                            <a href="{{ path('sortie_delete', {'id': sortie.id}) }}">
                                <i class="fas fa-times-circle"></i> Annuler la sortie
                            </a>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Grille principale : Image + Infos -->
        <div class="main-grid">
            <!-- Image -->
            <div class="image-card">
                <div class="detail-image">
                    {% if sortie.photoSortie %}
                        <img src="{{ asset('uploads/sorties/' ~ sortie.photoSortie) }}" alt="{{ sortie.nom }}">
                    {% else %}
                        <div class="placeholder-icon">
                            <i class="fas fa-image"></i>
                        </div>
                    {% endif %}

                    {% if sortie.lieu or sortie.site %}
                        <div class="location-badge">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>
                                {% if sortie.lieu %}{{ sortie.lieu.nom }}{% endif %}
                                {% if sortie.site and sortie.lieu %} – {% endif %}
                                {% if sortie.site %}{{ sortie.site.nom }}{% endif %}
                            </span>
                        </div>
                    {% endif %}

                    {% if sortie.etat.value == 'Ouverte' %}
                        <span class="badge-now badge-open">
                            <i class="fa-solid fa-lock-open"></i>Inscriptions ouvertes</span>
                    {% elseif sortie.participants|length >= sortie.nbInscriptionMax %}
                        <span class="badge-now badge-full">
                            <i class="fa-solid fa-lock"></i>Complet</span>
                    {% elseif sortie.dateLimiteInscription < date() %}
                        <span class="badge-now badge-closed">
                            <i class="fa-solid fa-lock"></i>Inscriptions closes</span>
                    {% elseif sortie.etat.value == 'Clôturée' or sortie.etat.value == 'Annulée' %}
                        <span class="badge-now badge-cancelled">{{ sortie.etat.value }}</span>
                    {% endif %}
                </div>
            </div>

            <!-- Infos principales -->
            <div class="info-card">
                <h1 class="detail-title">{{ sortie.nom }}</h1>

                {% if sortie.infoSortie %}
                    <div class="detail-description">
                        {{ sortie.infoSortie }}
                    </div>
                {% endif %}

                <div class="detail-grid">
                    <div class="detail-info-item">
                        <i class="fas fa-clock"></i>
                        <div>
                            <div class="info-label">Date et heure</div>
                            <div class="info-value">{{ sortie.dateHeureDebut|date('d/m/Y à H:i') }}</div>
                        </div>
                    </div>

                    <div class="detail-info-item">
                        <i class="fas fa-calendar-times"></i>
                        <div>
                            <div class="info-label">Limite d'inscription</div>
                            <div class="info-value">{{ sortie.dateLimiteInscription|date('d/m/Y') }}</div>
                        </div>
                    </div>

                    <div class="detail-info-item">
                        <i class="fas fa-hourglass-half"></i>
                        <div>
                            <div class="info-label">Durée</div>
                            <div class="info-value">{{ sortie.duree }} min</div>
                        </div>
                    </div>

                    <div class="detail-info-item">
                        <i class="fas fa-users"></i>
                        <div>
                            <div class="info-label">Participants</div>
                            <div class="info-value">{{ sortie.participants|length }}/{{ sortie.nbInscriptionMax }}</div>
                        </div>
                    </div>
                </div>

                <div class="action-buttons">
                    {% if app.user %}
                        {% set user = app.user %}

                        {% if user == sortie.organisateur %}
                            {% if sortie.etat.value == 'Créée' %}
                                <form method="post" action="{{ path('sortie_valider', {'id': sortie.id}) }}" style="flex: 1;">
                                    <button type="submit" class="btn-action btn-join" style="width: 100%;">
                                        <i class="fas fa-check-circle"></i> Publier la sortie
                                    </button>
                                </form>
                            {% else %}
                                <button class="btn-action btn-disabled" disabled>
                                    <i class="fas fa-ban"></i> Vous êtes l'organisateur
                                </button>
                            {% endif %}
                        {% elseif user in sortie.participants %}
                            <form method="post" action="{{ path('sortie_sinscrire', {'id': sortie.id}) }}" style="flex: 1;">
                                <button type="submit" class="btn-action btn-unsubscribe" style="width: 100%;">
                                    <i class="fas fa-times"></i> Se désinscrire
                                </button>
                            </form>
                        {% elseif sortie.participants|length < sortie.nbInscriptionMax and sortie.etat.value == 'Ouverte' %}
                            <form method="post" action="{{ path('sortie_sinscrire', {'id': sortie.id}) }}" style="flex: 1;">
                                <button type="submit" class="btn-action btn-join" style="width: 100%;">
                                    <i class="fa-solid fa-plus"></i> S'inscrire
                                </button>
                            </form>
                        {% else %}
                            <button class="btn-action btn-disabled" disabled>
                                <i class="fas fa-ban"></i> Inscriptions closes
                            </button>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Grille inférieure : Organisateur + Participants -->
        <div class="bottom-grid">
            <!-- Organisateur -->
            <div class="organizer-card">
                <div class="organizer-header">
                    <div class="info-label">Organisé par</div>
                    {% if is_granted('ROLE_ADMIN') or (app.user and app.user == sortie.organisateur) %}
                        <button class="btn-change-organizer" onclick="openChangeOrganizerModal()" title="Changer l'organisateur">
                            <i class="fas fa-user-edit"></i>
                        </button>
                    {% endif %}
                </div>

                {% if sortie.organisateur %}
                    <a href="{{ path('app_profil_participant', {id: sortie.organisateur.id}) }}" class="organizer-link">
                        <div class="organizer-avatar">
                            {% if sortie.organisateur.getAvatarPath() %}
                                <img src="{{ asset(sortie.organisateur.getAvatarPath()) }}" alt="Avatar {{ sortie.organisateur.prenom }}">
                            {% else %}
                                <span>{{ sortie.organisateur.prenom|first }}{{ sortie.organisateur.nom|first }}</span>
                            {% endif %}
                        </div>
                        <div class="organizer-name">
                            {{ sortie.organisateur.prenom ~ ' ' ~ sortie.organisateur.nom }}
                        </div>
                        {% if sortie.organisateur.pseudo %}
                            <div class="organizer-pseudo">{{ sortie.organisateur.pseudo }}</div>
                        {% endif %}
                    </a>
                {% else %}
                    <div class="organizer-avatar">
                        <span>??</span>
                    </div>
                    <div class="organizer-name">Organisateur inconnu</div>
                {% endif %}

                <div class="organizer-stats">
                    <div class="stat-item">
                        <div class="info-label">Sorties créées</div>
                        <div class="info-value">
                            {% if sortie.organisateur and sortie.organisateur.sortiesOrganisees %}
                                {{ sortie.organisateur.sortiesOrganisees|length }}
                            {% else %}
                                0
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Participants -->
            <div class="participants-card">
                <div class="participants-header">
                    <h2>Participants inscrits ({{ sortie.participants|length }})</h2>

                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="admin-buttons-inline">
                            <button class="btn-admin-action" onclick="openSearchModal()">
                                <i class="fas fa-user-plus"></i> Ajouter un participant
                            </button>
                            <button class="btn-admin-action" data-bs-toggle="modal" data-bs-target="#csvImportModal">
                                <i class="fas fa-file-csv"></i> Importer CSV
                            </button>
                        </div>
                    {% endif %}
                </div>

                {% if sortie.participants|length > 0 %}
                    <div class="participants-grid">
                        {% for participant in sortie.participants %}
                            <div class="participant-wrapper">
                                <a href="{{ path('app_profil_participant', {id: participant.id}) }}" class="participant-card">
                                    <div class="participant-avatar">
                                        {% if participant.getAvatarPath() %}
                                            <img src="{{ asset(participant.getAvatarPath()) }}" alt="Avatar {{ participant.prenom }}">
                                        {% else %}
                                            <span>{{ participant.prenom|first }}{{ participant.nom|first }}</span>
                                        {% endif %}
                                    </div>
                                    <div class="participant-name">
                                        {{ participant.pseudo ?? participant.prenom }}
                                    </div>
                                </a>

                                {% if is_granted('ROLE_ADMIN') %}
                                    <div class="participant-admin-actions">
                                        <form method="post" action="{{ path('admin_remove_participant', {id: sortie.id}) }}" class="remove-participant-form" style="display: inline;">
                                            <input type="hidden" name="participantId" value="{{ participant.id }}">
                                            <input type="hidden" name="motif" value="">
                                            <button type="button"
                                                    class="btn-icon btn-remove-participant swal-remove-btn"
                                                    data-nom="{{ participant.prenom }} {{ participant.nom }}"
                                                    title="Retirer de la sortie">
                                                <i class="fas fa-user-minus"></i>
                                            </button>
                                        </form>
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p style="color: #888;">Aucun participant pour le moment.</p>
                {% endif %}

                {# Modal recherche de participants #}
                <div class="modal fade" id="searchParticipantModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title"><i class="fas fa-search"></i> Rechercher un participant</h5>
                                <button type="button" class="btn-close" onclick="closeSearchModal()"></button>
                            </div>
                            <div class="modal-body">
                                <input type="text"
                                       id="searchInput"
                                       class="form-control search-input"
                                       placeholder="Rechercher par nom, prénom ou pseudo..."
                                       oninput="filterParticipants()">

                                <div id="participantsList" class="participants-search-list">
                                    {% for participant in participants %}
                                        <div class="participant-search-item" data-search="{{ (participant.nom ~ ' ' ~ participant.prenom ~ ' ' ~ participant.pseudo)|lower }}">
                                            <form method="post" action="{{ path('admin_add_participant', {id: sortie.id}) }}" style="display: flex; align-items: center; gap: 12px; width: 100%;">
                                                <input type="hidden" name="participantId" value="{{ participant.id }}">
                                                <div class="search-avatar">
                                                    {% if participant.getAvatarPath() %}
                                                        <img src="{{ asset(participant.getAvatarPath()) }}" alt="Avatar">
                                                    {% else %}
                                                        <span>{{ participant.prenom|first }}{{ participant.nom|first }}</span>
                                                    {% endif %}
                                                </div>
                                                <div style="flex: 1;">
                                                    <strong>{{ participant.prenom }} {{ participant.nom }}</strong>
                                                    {% if participant.pseudo %}
                                                        <small>@{{ participant.pseudo }}</small>
                                                    {% endif %}
                                                </div>
                                                <button type="submit" class="btn-add-search">
                                                    <i class="fas fa-plus"></i>
                                                </button>
                                            </form>
                                        </div>
                                    {% endfor %}
                                </div>

                                <div id="noResults" class="no-results" style="display: none;">
                                    <i class="fas fa-search"></i>
                                    <p>Aucun participant trouvé</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Modal import CSV #}
                <div class="modal fade" id="csvImportModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            {{ form_start(form, {
                                'action': path('admin_import', {id: sortie.id}),
                                'attr': {'enctype': 'multipart/form-data'}
                            }) }}
                            <div class="modal-header">
                                <h5 class="modal-title"><i class="fas fa-file-csv"></i> Importer un fichier CSV</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    {{ form_widget(form['csv_file']) }}
                                </div>
                                <small class="text-muted">Format attendu : une adresse email par ligne</small>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-upload"></i> Importer
                                </button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>

                {# Modal changement d'organisateur #}
                <div class="modal fade" id="changeOrganizerModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title"><i class="fas fa-exchange-alt"></i> Changer l'organisateur</h5>
                                <button type="button" class="btn-close" onclick="closeChangeOrganizerModal()"></button>
                            </div>
                            <div class="modal-body">
                                <input type="text"
                                       id="searchOrganizerInput"
                                       class="form-control search-input"
                                       placeholder="Rechercher un participant..."
                                       oninput="filterOrganizers()">

                                <div id="organizersList" class="participants-search-list">
                                    {% for participant in sortie.participants %}
                                        <div class="participant-search-item" data-search="{{ (participant.nom ~ ' ' ~ participant.prenom ~ ' ' ~ participant.pseudo)|lower }}">
                                            <form method="post" action="{{ path('sortie_change_organizer', {id: sortie.id}) }}" style="display: flex; align-items: center; gap: 12px; width: 100%;">
                                                <input type="hidden" name="newOrganizerId" value="{{ participant.id }}">
                                                <div class="search-avatar">
                                                    {% if participant.getAvatarPath() %}
                                                        <img src="{{ asset(participant.getAvatarPath()) }}" alt="Avatar">
                                                    {% else %}
                                                        <span>{{ participant.prenom|first }}{{ participant.nom|first }}</span>
                                                    {% endif %}
                                                </div>
                                                <div style="flex: 1;">
                                                    <strong>{{ participant.prenom }} {{ participant.nom }}</strong>
                                                    {% if participant.pseudo %}
                                                        <small>@{{ participant.pseudo }}</small>
                                                    {% endif %}
                                                </div>
                                                {% if participant.id == sortie.organisateur.id %}
                                                    <span class="current-organizer-badge">
                                                        <i class="fas fa-crown"></i> Actuel
                                                    </span>
                                                {% else %}
                                                    <button type="submit" class="btn-add-search">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                {% endif %}
                                            </form>
                                        </div>
                                    {% endfor %}
                                </div>

                                <div id="noOrganizerResults" class="no-results" style="display: none;">
                                    <i class="fas fa-search"></i>
                                    <p>Aucun participant trouvé</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'partials/_footer.html.twig' %}
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Recherche de participants
        function openSearchModal() {
            document.getElementById('searchParticipantModal').classList.add('show');
            document.getElementById('searchParticipantModal').style.display = 'block';
            document.body.classList.add('modal-open');
            document.getElementById('searchInput').focus();
        }

        function closeSearchModal() {
            document.getElementById('searchParticipantModal').classList.remove('show');
            document.getElementById('searchParticipantModal').style.display = 'none';
            document.body.classList.remove('modal-open');
            document.getElementById('searchInput').value = '';
            filterParticipants();
        }

        function filterParticipants() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const items = document.querySelectorAll('.participant-search-item');
            let visibleCount = 0;

            items.forEach(item => {
                const searchData = item.getAttribute('data-search');
                if (searchData.includes(searchTerm)) {
                    item.style.display = 'block';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });

            document.getElementById('noResults').style.display = visibleCount === 0 ? 'flex' : 'none';
        }

        // Changement d'organisateur
        function openChangeOrganizerModal() {
            document.getElementById('changeOrganizerModal').classList.add('show');
            document.getElementById('changeOrganizerModal').style.display = 'block';
            document.body.classList.add('modal-open');
            document.getElementById('searchOrganizerInput').focus();
        }

        function closeChangeOrganizerModal() {
            document.getElementById('changeOrganizerModal').classList.remove('show');
            document.getElementById('changeOrganizerModal').style.display = 'none';
            document.body.classList.remove('modal-open');
            document.getElementById('searchOrganizerInput').value = '';
            filterOrganizers();
        }

        function filterOrganizers() {
            const searchTerm = document.getElementById('searchOrganizerInput').value.toLowerCase();
            const items = document.querySelectorAll('#organizersList .participant-search-item');
            let visibleCount = 0;

            items.forEach(item => {
                const searchData = item.getAttribute('data-search');
                if (searchData.includes(searchTerm)) {
                    item.style.display = 'block';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });

            document.getElementById('noOrganizerResults').style.display = visibleCount === 0 ? 'flex' : 'none';
        }

        // Fermeture du modal import CSV
        document.addEventListener('DOMContentLoaded', function () {
            const csvForm = document.querySelector('#csvImportModal form');
            if (csvForm) {
                csvForm.addEventListener('submit', function () {
                    const modalElement = document.getElementById('csvImportModal');
                    const modalInstance = bootstrap.Modal.getInstance(modalElement);
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                });
            }

            // Confirmation changement d'organisateur
            document.querySelectorAll('#changeOrganizerModal form').forEach(form => {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();

                    const participantName = this.querySelector('strong').textContent;

                    Swal.fire({
                        title: 'Changer l\'organisateur ?',
                        html: `<p>Êtes-vous sûr de vouloir désigner <strong>${participantName}</strong> comme nouvel organisateur ?</p>`,
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonText: 'Oui, changer',
                        cancelButtonText: 'Annuler',
                        confirmButtonColor: '#FF6B00',
                        cancelButtonColor: '#6c757d'
                    }).then(result => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                });
            });

            // Confirmation retrait participant
            document.querySelectorAll('.swal-remove-btn').forEach(button => {
                button.addEventListener('click', function (e) {
                    e.preventDefault();
                    const form = this.closest('form');
                    const participantNom = this.getAttribute('data-nom');

                    Swal.fire({
                        title: 'Retirer un participant',
                        html: `
                            <p>Veuillez indiquer le motif du retrait de <strong>${participantNom}</strong> :</p>
                            <input id="motif-input" class="swal2-input" placeholder="Motif obligatoire">
                        `,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Confirmer le retrait',
                        cancelButtonText: 'Annuler',
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                        preConfirm: () => {
                            const motif = document.getElementById('motif-input').value.trim();
                            if (!motif) {
                                Swal.showValidationMessage('⚠️ Le motif est obligatoire.');
                                return false;
                            }
                            return motif;
                        }
                    }).then(result => {
                        if (result.isConfirmed) {
                            form.querySelector('input[name="motif"]').value = result.value;
                            form.submit();
                        }
                    });
                });
            });

            // Messages flash
            {% for label, messages in app.flashes %}
            {% for message in messages %}
            Swal.fire({
                icon: '{{ label == "success" ? "success" : (label == "error" ? "error" : "info") }}',
                title: '{{ label|capitalize }}',
                text: '{{ message|e("js") }}',
                confirmButtonColor: '#3085d6'
            });
            {% endfor %}
            {% endfor %}

            // Menu trois points
            const dotsButton = document.querySelector('.dots-button');
            const dropdownMenu = document.getElementById('dropdownMenu');

            if (dotsButton && dropdownMenu) {
                dotsButton.addEventListener('click', function(event) {
                    event.stopPropagation();
                    dropdownMenu.classList.toggle('show');
                });

                document.addEventListener('click', function(event) {
                    if (!dropdownMenu.contains(event.target) && !dotsButton.contains(event.target)) {
                        dropdownMenu.classList.remove('show');
                    }
                });
            }
        });
    </script>
{% endblock %}