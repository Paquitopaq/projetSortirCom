<!-- Navbar style Airbnb -->
<nav class="airbnb-navbar">
    <div class="nav-content">

        <!-- Logo -->
        <a href="{{ path('app_home') }}" class="logo">
            <img src="{{ asset('assets/images/logo.png') }}" alt="BougeTonCrew" class="logo-img">
        </a>

        <!-- Navigation centrale -->
        <div class="nav-links">
            <a href="{{ path('app_home') }}" class="nav-link active">Accueil</a>
            <a href="{{ path('app_sortie') }}" class="nav-link">Sorties</a>
        </div>

        <!-- Barre de recherche -->
        <div class="search-bar">
            <form action="{{ path('app_sortie') }}" method="get">
                <div class="search-container">
                    <div class="search-section" id="destination-section">
                        <div class="search-label">Destination</div>
                        <input type="text" name="destination" class="search-input" placeholder="Rechercher une destination">
                    </div>
                    <div class="search-section" id="dates-section">
                        <div class="search-label">Dates</div>
                        <input type="text" name="dates" class="search-input datepicker" placeholder="Quand ?" readonly>
                    </div>
                    <div class="search-section" id="type-section">
                        <div class="search-label">Type de service</div>
                        <input type="text" name="type" class="search-input" placeholder="Ajouter">
                    </div>
                    <button type="submit" class="search-btn">
                        <svg class="search-icon" viewBox="0 0 32 32" fill="currentColor">
                            <path d="M13 0c7.18 0 13 5.82 13 13 0 2.868-.929 5.519-2.502 7.669l7.916 7.917-2.828 2.828-7.917-7.916A12.942 12.942 0 0 1 13 26C5.82 26 0 20.18 0 13S5.82 0 13 0zm0 4a9 9 0 1 0 0 18 9 9 0 0 0 0-18z"/>
                        </svg>
                    </button>
                </div>
            </form>
        </div>

        <!-- Menu utilisateur -->
        <div class="user-menu">
            {% if app.user %}
                <a href="{{ path('sortie_create') }}" class="become-host">Créer une sortie</a>
                <button class="globe-btn">
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                        <path d="M8 .5a7.5 7.5 0 1 0 0 15 7.5 7.5 0 0 0 0-15zM1.5 8a6.5 6.5 0 0 1 12.41-2.5H11.5a5.5 5.5 0 0 0-9.473 1.853A6.461 6.461 0 0 1 1.5 8zm0 0c0 .536.065 1.055.185 1.553A5.5 5.5 0 0 0 11.5 10.5h2.41A6.5 6.5 0 0 1 1.5 8zm6.5 6.5a6.461 6.461 0 0 1-3.473-.99A5.5 5.5 0 0 0 13.09 11H14.5a6.5 6.5 0 0 1-6.5 3.5z"/>
                    </svg>
                </button>
                <div class="menu-toggle">
                    <div class="hamburger">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                    <div class="user-avatar">{{ app.user.username|first|upper }}</div>
                </div>

                <div class="dropdown-menu">
                    <a href="{{ path('profile_index') }}" class="dropdown-item">Mon profil</a>
                    <a href="{{ path('profile_edit') }}" class="dropdown-item">Paramètres</a>
                    <div class="dropdown-divider"></div>
                    <a href="{{ path('app_logout') }}" class="dropdown-item danger">Se déconnecter</a>
                </div>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn-auth">Se connecter</a>
                <a href="{{ path('app_register') }}" class="btn-auth-outline">S'inscrire</a>
            {% endif %}
        </div>
    </div>
</nav>