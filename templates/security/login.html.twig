{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

<title>{% block title %}Se connecter ｜ BougeTonCrew{% endblock %}</title>

<link rel="icon" href="{{ asset('icons/favicon.ico') }}">

{% block body %}
    <div class="auth-container">
        <div class="auth-wrapper">

            <!-- Illustration gauche -->
            <div class="auth-illustration">
                <img src="{{ asset('assets/images/illustration.png') }}" alt="Illustration">
            </div>

            <!-- Formulaire de connexion -->
            <div class="auth-form-section">
                <div class="auth-form-content">

                    <h1 class="auth-title">Connexion</h1>

                    <!-- Formulaire -->
                    <form method="post" class="auth-form">
                        <!-- Email -->
                        <div class="form-group">
                            <div class="input-wrapper">
                                <span class="input-icon">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="12" cy="7" r="4"></circle>
                                    </svg>
                                </span>
                                <input type="email"
                                       name="email"
                                       id="inputEmail"
                                       class="form-input"
                                       value="{{ last_username }}"
                                       placeholder="Adresse e-mail"
                                       autocomplete="email"
                                       required
                                       autofocus>
                            </div>
                        </div>

                        <!-- Mot de passe -->
                        <div class="form-group">
                            <div class="input-wrapper">
                                <span class="input-icon">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                    </svg>
                                </span>
                                <input type="password"
                                       name="password"
                                       id="inputPassword"
                                       class="form-input"
                                       placeholder="Mot de passe"
                                       autocomplete="current-password"
                                       required>
                            </div>
                        </div>

                        <!-- Remember me -->
                        <div class="form-check-wrapper">
                            <label class="custom-checkbox">
                                <input type="checkbox" id="remember_me" name="_remember_me">
                                <span class="checkbox-label">Se souvenir de moi</span>
                            </label>
                        </div>

                        <!-- CSRF Token -->
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <!-- Bouton connexion -->
                        <button type="submit" class="btn-submit">
                            Se connecter
                        </button>

                        <!-- Lien mot de passe oublié -->
                        <div class="forgot-password">
                            <a href="{{ path('app_forgot_password') }}" class="forgot-link">
                                Mot de passe oublié ?
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    {# Erreur de connexion (email, mot de passe ou compte désactivé) #}
    {% if error %}
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Erreur de connexion',
                text: '{{ error.messageKey|trans(error.messageData, "security")|e("js") }}',
                confirmButtonColor: '#d33',
                confirmButtonText: 'Réessayer'
            });
        </script>
    {% endif %}

    {# Messages flash (succès / erreur) #}
    {% for message in app.flashes('success') %}
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Succès',
                text: '{{ message|e('js') }}',
                confirmButtonColor: '#28a745',
                confirmButtonText: 'OK'
            });
        </script>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Erreur',
                text: '{{ message|e('js') }}',
                confirmButtonColor: '#d33',
                confirmButtonText: 'OK'
            });
        </script>
    {% endfor %}
{% endblock %}
